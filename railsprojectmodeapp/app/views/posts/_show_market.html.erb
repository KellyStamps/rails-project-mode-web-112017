<div class="row">
  <div class="col s10 offset-s1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">

        <%= link_to @post.user.username, user_path(@post.user) %>
        <% if @post.user.admin == true%>
          | admin |
        <%end%>

        is selling

        <span class="card-title"><%= link_to @post.title, post_path(@post), class: 'text-dark' %></span>



        <br>
        <%= link_to @post.category.name, category_path(@post.category) %><br>

        Contact Info: <br>
        Email: <%= @post.user.email %><br><br>
        <%= @post.likes.count %> likes<br>

        <p><%= @post.summary %></p>
      </div>
      <div class="card-action">

      </div>
    </div>
  </div>
</div>

<h2>Create New Post</h2>

<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>

<%= form_for @post do |f|%>
  <%=f.text_field :content, placeholder: "Content"%><br>
  <%=f.password_field :post_type, placeholder: "Text or URL?"%><br>
  <%=f.password_field :title, placeholder: "Title"%><br>
  <%=f.text_field :link, placeholder: "Link"%><br>
  <%=f.collection_select (:category_id, @categories, :id, :name)%><br>
  <%=f.submit%>
<%end%>
